rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to validate video file
    function isValidVideo() {
      return request.resource.size < 100 * 1024 * 1024 // 100MB max
        && request.resource.contentType.matches('video/.*');
    }
    
    // Helper function to validate image file
    function isValidImage() {
      return request.resource.size < 10 * 1024 * 1024 // 10MB max
        && request.resource.contentType.matches('image/.*');
    }
    
    // Videos uploaded by users
    match /videos/{userId}/{videoId} {
      // Anyone can read/view videos
      allow read: if true;
      
      // Only authenticated users can upload videos to their own folder
      allow create: if isAuthenticated() 
        && request.auth.uid == userId
        && isValidVideo();
      
      // Only owner can delete
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Thumbnails for videos
    match /thumbnails/{userId}/{thumbnailId} {
      allow read: if true;
      allow create: if isAuthenticated() 
        && request.auth.uid == userId
        && isValidImage();
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profile pictures
    match /profiles/{userId}/{imageId} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId && isValidImage();
    }
    
    // Post images for feed
    match /post-images/{userId}/{imageId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.auth.uid == userId && isValidImage();
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Media gallery (photos, videos, audio)
    match /media-gallery/{userId}/{mediaId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Verification documents
    match /verification/{userId}/{docId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
